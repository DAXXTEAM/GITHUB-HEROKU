{
  "name": "github-heroku-bot",
  "description": "Telegram Bot using Pyrogram",
  "repository": "https://github.com/daxxteam/GITHUB-HEROKU",
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token",
      "required": true
    },
    "BOT_USERNAME": {
      "description": "Your Bot Username",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram User ID (Owner)",
      "required": true
    },
    "GIT_TOKEN": {
      "description": "Your GitHub Token",
      "required": true
    },
    "LOGGER_ID": {
      "description": "Your Logger Chat ID",
      "required": true
    },
    "HEROKU_API": {
      "description": "Your Heroku API Key",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "stack": "heroku-20"
}
